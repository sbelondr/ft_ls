mkdir dirTest08
cd dirTest08

cp ../../ft_ls .

touch a b c
echo "==============="
ls -l
echo "==============="
./ft_ls -l
echo "==============="
rm -rf a b c

touch a b c && echo 'coucou' > a &&  echo 'hello world' > b
echo "==============="
ls -l
echo "==============="
./ft_ls -l
echo "==============="
rm -rf a b c


touch .a
dd bs=2 count=14450 if=/dev/random of=.a  >/dev/null 2>&1
ln -s .a b
echo "==============="
ls -l
echo "==============="
./ft_ls -l
echo "==============="
rm -rf .a

mkdir -p dir/.hdir
touch dir/.hdir/file
echo "==============="
ls -la dir
echo "==============="
./ft_ls -la dir
echo "==============="
rm -rf dir

mkdir -p dir
touch dir/.file touch dir/visible
ln dir/.file sym0
ln dir/.file sym1
ln dir/.file sym2
ln dir/.file sym3
ln dir/.file sym4
ln dir/.file sym5
ln dir/.file sym6
ln dir/.file sym7
ln dir/.file sym8
ln dir/.file sym9
ln dir/.file sym10
echo "==============="
ls -l dir
echo "==============="
./ft_ls -l dir
echo "==============="
rm -rf dir

touch -t 999912312459 future
echo "==============="
ls -lt
echo "==============="
./ft_ls -lt
echo "==============="


cd ..
rm -rf dirTest08
